    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Data for gallery items
            const resources = [
                {
                    title: 'Rúbrica de Inglés',
                    description: 'Rúbrica detallada para la evaluación de la comprensión oral y escrita en Inglés, especificando niveles de logro (excelente, bien, suficiente, insuficiente).',
                    url: 'https://storage.googleapis.com/gemini-prod-us-east1-955a/user/2025-06-11T09_13_43.342Z_R%C3%BAbrica_Comprensi%C3%B3n_(Ingl%C3%A9s).pdf', // Placeholder, replace with actual URL if available
                    category: 'evaluacion',
                    icon: '📝'
                },
                {
                    title: 'Examen de Música (Metrónomo)',
                    description: 'Examen tipo test para 3º de Primaria sobre el uso y las partes del metrónomo, alineado con criterios de evaluación específicos del área de música.',
                    url: 'https://storage.googleapis.com/gemini-prod-us-east1-955a/user/2025-06-11T09_13_43.342Z_Examen_Tipo_Test_METR%C3%93NOMO_3%C2%BA_a_6%C2%BA.docx', // Placeholder
                    category: 'evaluacion',
                    icon: '🎵'
                },
                {
                    title: 'Actividad Cultural Comparativa',
                    description: 'Actividad visual para comparar y contrastar elementos culturales, como el traje tradicional escocés (Kilt) y el traje de flamenca.',
                    url: 'https://storage.googleapis.com/gemini-prod-us-east1-955a/user/2025-06-11T09_13_43.342Z_WhatsApp_Image_2025-06-11_at_11.13.44.jpeg', // Placeholder
                    category: 'actividad',
                    icon: '🎭'
                },
                {
                    title: 'Lectura Tematizada: Carnaval',
                    description: 'Comprensión lectora sobre el Carnaval y su música en diferentes partes del mundo (Cádiz, Tenerife, Brasil, Colombia), con preguntas para evaluar la asimilación de contenidos.',
                    url: 'https://storage.googleapis.com/gemini-prod-us-east1-955a/user/2025-06-11T09_13_43.342Z_Carnaval_lectura_y_test_-_busca_informaci%C3%B3n_3%C2%BA_a_6%C2%BA.docx', // Placeholder
                    category: 'actividad',
                    icon: '📖'
                },
                {
                    title: 'Ejercicio "Listening" (Lava-Fill)',
                    description: 'Actividad para practicar pronombres en inglés rellenando los huecos de la letra de la canción "Lava" de Disney. Creado con la ayuda de ChatGPT.',
                    url: 'https://storage.googleapis.com/gemini-prod-us-east1-955a/user/2025-06-11T09_13_43.342Z_Lava-_Fill-in_the_blanks.pdf', // Placeholder
                    category: 'actividad',
                    icon: '🎧'
                },
                {
                    title: 'Himno de las Escuolimpiadas',
                    description: 'Canción personalizada creada con la IA de Suno para las "Escuolimpiadas" de Osuna, fomentando valores como la unidad, el respeto y el esfuerzo.',
                    url: 'https://storage.googleapis.com/gemini-prod-us-east1-955a/user/2025-06-11T09_13_43.342Z_HIMNO_DE_LAS_ESCUOLIMPIADAS_-_letra.pdf', // Placeholder
                    category: 'musica',
                    icon: '🎶'
                },
                {
                    title: 'Cómic Audiovisual',
                    description: 'La IA se utilizó como herramienta de apoyo para la elaboración de actividades competenciales complejas, como este cómic audiovisual sobre la Prehistoria.',
                    url: 'https://www.youtube.com/watch?v=JLsRqcpQiCk',
                    category: 'proyecto',
                    icon: '🎬'
                }
            ];

            const galleryGrid = document.getElementById('gallery-grid');
            const filtersContainer = document.getElementById('filters');
            const modal = document.getElementById('modal');
            const modalCloseBtn = document.getElementById('modal-close');
            const modalTitle = document.getElementById('modal-title');
            const modalDescription = document.getElementById('modal-description');
            const modalLink = document.getElementById('modal-link');
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');

            function renderGallery(filter = 'all') {
                galleryGrid.innerHTML = '';
                const filteredResources = resources.filter(res => filter === 'all' || res.category === filter);
                
                if(filteredResources.length === 0) {
                    galleryGrid.innerHTML = `<p class="col-span-full text-center text-slate-500">No hay recursos en esta categoría.</p>`;
                    return;
                }

                filteredResources.forEach(res => {
                    const item = document.createElement('div');
                    item.className = 'gallery-item bg-white p-5 rounded-lg shadow-md border border-slate-200 cursor-pointer';
                    item.dataset.category = res.category;
                    item.innerHTML = `
                        <div class="text-3xl mb-3">${res.icon}</div>
                        <h5 class="font-bold text-lg mb-2">${res.title}</h5>
                        <p class="text-sm text-slate-600 line-clamp-3">${res.description}</p>
                    `;
                    item.addEventListener('click', () => openModal(res));
                    galleryGrid.appendChild(item);
                });
            }

            function openModal(resource) {
                modalTitle.textContent = resource.title;
                modalDescription.textContent = resource.description;
                modalLink.href = resource.url;
                modal.classList.remove('hidden');
            }

            function closeModal() {
                modal.classList.add('hidden');
            }

            filtersContainer.addEventListener('click', (e) => {
                if (e.target.tagName === 'BUTTON') {
                    const category = e.target.dataset.category;
                    
                    // Update active button style
                    document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
                    e.target.classList.add('active');

                    renderGallery(category);
                }
            });
            
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // Close modal events
            modalCloseBtn.addEventListener('click', closeModal);
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    closeModal();
                }
            });

            // Initial render
            renderGallery();
        });
    </script>
</body>
</html>
